@model SecondHandMarket.Models.LogOnModel
@{
  ViewBag.Title = "登录";
  Layout = "~/Views/Shared/_LayoutWithoutHead.cshtml";
}

@section head{
  <link href="@Url.Content("~/Content/pagecss/Account/LogOn.less")" rel="stylesheet" />
  <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<div class="content">
  <h3 style="color:#52A82B">登录</h3>
<p>
  请输入用户名和密码。如果您没有帐户，请 @Html.ActionLink("注册", "Register")。
</p>

@Html.ValidationSummary(true, "登录不成功。请更正错误并重试。")
  
@if (TempData["SuccessMsg"] != null)
{
  <div class="alert alert-success">@Html.Raw(TempData["SuccessMsg"].ToString())</div>
}
@if (TempData["ErrorMsg"] != null)
{
  <div class="alert alert-error">@Html.Raw(TempData["ErrorMsg"].ToString())</div>
}
  @using (Html.BeginForm())
{
  <div>
    <fieldset>
      <legend>帐户信息</legend>

      <div class="editor-label">
        @Html.LabelFor(m => m.UserName)
      </div>
      <div class="editor-field">
        @Html.TextBoxFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)
      </div>

      <div class="editor-label">
        @Html.LabelFor(m => m.Password)
      </div>
      <div class="editor-field" style="display:inline-block">
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
      </div>
      <a href="@Url.Action("verify_first_step")" style="margin-left:10px">忘记密码？</a>

      <div class="editor-label checkbox">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
      </div>
      
      <p>
        <button type="submit" class="btn">
          <i class="icon-user"></i>&nbsp;登录
        </button>
      </p>
    </fieldset>
  </div>

}
  </div>
