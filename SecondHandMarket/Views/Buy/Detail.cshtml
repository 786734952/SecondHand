@using SecondHandMarket.Models
@{
  ViewBag.Title = "商品求购";
  Layout = "../Shared/_FGLayout.cshtml";
  var category = ViewBag.Category as Category;
}
<header>
  <link href="@Url.Content("~/Content/pagecss/Buy/index.less")" rel="stylesheet" />
</header>
<div>
  <div class="content">
    <div class="process">
      <div class="step1 step">
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="./FirstStep">
          <span>选择大类</span>
        </a>
      </div>
      <div class="step2 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="@Url.Action("SecondStep")?categoryId=@category.ParentCategory.Id">
          <span>选择小类</span>
        </a>
      </div>
      <div class="step3 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle" style="width:340px"></div>
        <a href="#">
          <span>填写详情</span>
        </a>
      </div>
    </div>
    <div class="title">
      <span><i class="icon-info-sign"></i>&nbsp; 填写详情</span>
    </div>
    <div class="classify">
      <form action="" class="form-horizontal">
        <div class="control-group">
          <label class="control-label" for="title">标题</label>
          <div class="controls">
            <input type="text" id="title" required autofocus/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="price">价格</label>
          <div class="controls">
            <input type="text" class="input-small" id="price" required/>
            <label style="display:inline">元</label>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="describe">描述</label>
          <div class="controls">
            <textarea rows="3" id="describe"></textarea>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="">地点</label>
          <div class="controls">
            <select class="span2">
              <option>中心校区</option>
              <option>城南校区</option>
            </select>
            <select class="span2">
              <option></option>
              <option></option>
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="telephone">联系电话</label>
          <div class="controls">
            <input type="tel" id="telephone" required/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="linkMan">联系人</label>
          <div class="controls">
            <input type="text" id="linkMan" required/>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="QQ">QQ号</label>
          <div class="controls">
            <input type="text" id="QQ" />
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn btn-primary">求购</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
