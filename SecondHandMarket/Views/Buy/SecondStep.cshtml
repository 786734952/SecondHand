@using SecondHandMarket.Models
@{
  ViewBag.Title = "商品求购";
  Layout = "../Shared/_FGLayout.cshtml";
  var categories = ViewBag.Categories as List<Category>;
}
@section head
{
  <link href="@Url.Content("~/Content/pagecss/Buy/index.less")" rel="stylesheet" />
}
<div>
  <div class="content">
    <div class="process">
      <div class="step1 step">
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="./FirstStep">
          <span>选择大类</span>
        </a>
      </div>
      <div class="step2 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="#">
          <span>选择小类</span>
        </a>
      </div>
      <div class="step3 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle unactive" style="width: 340px"></div>
        <a href="#">
          <span>填写详情</span>
        </a>
      </div>
    </div>
    <div class="title">
      <span><i class="icon-info-sign"></i>&nbsp;选择小类</span>
    </div>
    <div class="classify">
      <dl class="dl-horizontal">
        @foreach (var category in categories) 
        { 
           <dt>@category.Name</dt>
          <dd>
          <ul>
            @foreach (var subCate in category.SubCategories) 
            { 
              <li><a href="@Url.Action("Add")?categoryId=@subCate.Id">@subCate.Name</a></li>
            }
          </ul>
        </dd>
        }
      </dl>
    </div>
  </div>
</div>
