@using SecondHandMarket.Models
@{
  ViewBag.Title = "商品发布";
  Layout = "../Shared/_FGLayout.cshtml";
  var categories = ViewBag.Categories as List<Category>;
}
<header>
  <link href="@Url.Content("~/Content/pagecss/Release/index.less")" rel="stylesheet" />
</header>
<div>
  <div class="content">
    <div class="process">
      <div class="step1 step">
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="./Index">
          <span>选择大类</span>
        </a>
      </div>
      <div class="step2 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle"></div>
        <div class="right-triangle"></div>
        <a href="#">
          <span>选择小类</span>
        </a>
      </div>
      <div class="step3 step">
        <div class="right-triangle transparent"></div>
        <div class="rectangle" style="width: 340px"></div>
        <a href="#">
          <span>填写详情</span>
        </a>
      </div>
    </div>
    <div class="title">
      <span>选择大类</span>
    </div>
    <div class="classify">
      <dl class="dl-horizontal">
        @foreach (var category in categories)
        { 
          <dt>@category.Name</dt>
          <dd>
            <ul>
              @foreach (var subCate in category.SubCategories)
              {
                <li><a href="@Url.Action("Detail")?categoryId=@subCate.Id">@subCate.Name</a></li>
              }
            </ul>
          </dd>
        }
      </dl>
    </div>
  </div>
</div>

