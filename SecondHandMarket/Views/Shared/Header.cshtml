@{
  ViewBag.Title = "header";
  var controller = Request.RequestContext.RouteData.Values["controller"].ToString().ToLower();
  var action = Request.RequestContext.RouteData.Values["action"].ToString().ToLower();
}
<div class="header menu">

  <div class="header-title">
    <h2>二手交易购物平台</h2>

  </div>
  <div class="mainmenu">
    <ul class="mainnav">
      <li class="nav1">
        <a class="index @(controller == "home" ? "active" : "")" href="@Url.Action("Index", "Home")">
          <span>首页</span>
        </a>
      </li>
      <li class="nav2">
        <a class="index @(controller == "goods" ? "active" : "")" href="@Url.Action("Index", "Goods")">
          <span>发现</span>
        </a>
      </li>
      <li class="nav3">
        <a class="buy @(controller == "buy" ? "active" : "")" href="@Url.Action("Index", "Buy")">
          <span>商品求购</span>
        </a>
      </li>
      <li class="nav4">
        <a class="release @(controller == "release" ? "active" : "")" href="@Url.Action("Index", "Release")">
          <span>商品发布</span>
        </a>
      </li>
      <li class="nav4">
        <a class="collect @(controller == "user" ? "active" : "")" href="@Url.Action("Index", "User")">
          <span>用户中心</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="prompt">
    <div class="operate">
      <div id="logindisplay">
        @Html.Partial("_LogOnPartial")
      </div>
    </div>
    <form action="@Url.Action("Index", "Goods")" class="form-search" method="GET">
      <div class="search input-append">
        <input name="name" type="text" class="input-medium search-query" 
          placeholder="输入商品名称" value="@ViewBag.SearchName" />
        <button class="btn btn-small" type="submit">Go!</button>
      </div>
    </form>
  </div>

</div>
@section scripts {
  @RenderSection("scripts", false)
}